<!-- FRAME GEOMETRIES - NORMAL WINDOW -->

   <!-- FRAME GEOMETRIES - NORMAL WINDOW -->

   	<frame_geometry name="fg_NN" rounded_top_left="false" rounded_top_right="false" title_scale="small">
	   <distance name="left_width" value="3"/>
	   <distance name="right_width" value="3"/>
	   <distance name="bottom_height" value="3"/>
	   <distance name="left_titlebar_edge" value="3"/>
	   <distance name="right_titlebar_edge" value="3"/>
	   <distance name="button_width" value="23"/>
	   <distance name="button_height" value="24"/>
	   <distance name="title_vertical_pad" value="0"/>
	   <border name="title_border" left="0" right="0" top="0" bottom="0"/>
	   <border name="button_border" left="0" right="0" top="0" bottom="0"/>
	</frame_geometry>

	<frame_geometry name="fg_NM" parent="fg_NN" rounded_top_left="false" rounded_top_right="false">
		<distance name="left_width" value="0"/>
		<distance name="right_width" value="0"/>
		<distance name="bottom_height" value="0"/>
	</frame_geometry>
	
   <!-- FRAME GEOMETRIES - DIALOG WINDOW -->

	<frame_geometry name="fg_D" parent="fg_NN">
	   <distance name="button_width" value="26"/>
	</frame_geometry>
	
<!-- DRAWING OPERATIONS -->

	<draw_ops name="draw_none">
	</draw_ops>

<!-- DRAWING OPERATIONS - BUTTONS -->
    	
   <!-- DRAWING OPERATIONS - BUTTON - MENU -->
        
      <!-- DRAWING OPERATIONS - BUTTON - MIN -->

      <draw_ops name="do_B1n">	      
	      <image filename="B1n.png" x="0" y="0" width="23" height="24" />
