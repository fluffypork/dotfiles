      <draw_ops name="do_B1d">	      
	      <image filename="B1d.png" x="0" y="0" width="23" height="24" />
      </draw_ops>

      <!-- DRAWING OPERATIONS - BUTTON - MAX -->

      <draw_ops name="do_B2n">	      
	      <image filename="B2n.png" x="0" y="0" width="23" height="24" />
      </draw_ops>

      <draw_ops name="do_B2o">	      
	      <image filename="B2o.png" x="0" y="0" width="23" height="24" />
      </draw_ops>

      <draw_ops name="do_B2d">	      
	      <image filename="B2d.png" x="0" y="0" width="23" height="24" />
      </draw_ops>
      
      <!-- DRAWING OPERATIONS - BUTTON - CLOSE -->
      
      <!-- DRAWING OPERATIONS - BUTTON - CLOSE - NORMALWINDOW -->
      
      <draw_ops name="do_B3n">	      
	      <image filename="B3n.png" x="0" y="0" width="23" height="24" />
      </draw_ops>

      <draw_ops name="do_B3o">	      
	      <image filename="B3o.png" x="0" y="0" width="23" height="24" />
      </draw_ops>

      <draw_ops name="do_B3d">	      
	      <image filename="B3d.png" x="0" y="0" width="23" height="24" />
      </draw_ops>

      <!-- DRAWING OPERATIONS - BUTTON - CLOSE - MAXIMIZEDWINDOW -->

      <draw_ops name="do_B3Mn">	      
	      <image filename="B3Mn.png" x="0" y="0" width="23" height="24" />
      </draw_ops>

      <draw_ops name="do_B3Mo">	      
	      <image filename="B3Mo.png" x="0" y="0" width="23" height="24" />
